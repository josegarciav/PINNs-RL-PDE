{
    "device": "mps",
    "model": {
        "architecture": "fourier",
        "input_dim": 2,
        "hidden_dim": 124,
        "output_dim": 1,
        "num_layers": 8,
        "activation": "relu",
        "fourier_features": true,
        "fourier_scale": 10.0,
        "dropout": 0.1,
        "layer_norm": true
    },
    "pde": {
        "parameters": {
            "alpha": 0.01
        },
        "domain": [
            [
                0.0,
                3.14159
            ]
        ],
        "time_domain": [
            0.0,
            3.14159
        ],
        "initial_condition": {
            "type": "sine",
            "amplitude": 1.0,
            "frequency": 2.0
        },
        "boundary_conditions": {
            "left": {
                "type": "dirichlet",
                "value": 0.0
            },
            "right": {
                "type": "dirichlet",
                "value": 0.0
            },
            "initial": {
                "type": "sine",
                "amplitude": 1.0,
                "frequency": 2.0
            }
        },
        "exact_solution": {
            "type": "sine",
            "amplitude": 1.0,
            "frequency": 2.0
        }
    },
    "training": {
        "num_epochs": 1000,
        "batch_size": 1000,
        "num_collocation_points": 10000,
        "validation_frequency": 100,
        "early_stopping": {
            "enabled": true,
            "patience": 10
        },
        "optimizer_config": {
            "name": "adam",
            "lr": 0.001,
            "weight_decay": 1e-05
        },
        "rl_update_frequency": 10
    },
    "rl": {
        "enabled": true,
        "state_dim": 2,
        "action_dim": 1,
        "hidden_dim": 64,
        "learning_rate": 0.001,
        "gamma": 0.99,
        "epsilon_start": 1.0,
        "epsilon_end": 0.01,
        "epsilon_decay": 0.995,
        "memory_size": 10000,
        "batch_size": 64,
        "target_update": 100,
        "reward_weights": {
            "residual": 1.0,
            "boundary": 1.0,
            "initial": 1.0,
            "exploration": 0.1
        }
    },
    "evaluation": {
        "num_points": 100,
        "metrics": [
            "l2_error",
            "max_error",
            "mean_error"
        ],
        "save_plots": true,
        "plot_frequency": 100
    },
    "logging": {
        "level": "INFO",
        "save_checkpoints": true,
        "checkpoint_frequency": 1000,
        "log_frequency": 100
    },
    "paths": {
        "results_dir": "results",
        "checkpoint_dir": "checkpoints",
        "log_dir": "logs"
    }
}